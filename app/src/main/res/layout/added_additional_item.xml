<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@color/lightgray" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/additionalitem_tv_servicelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdfsdfsdf"
            android:textColor="@color/red"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/additionalitem_iv_removeservice"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:src="@drawable/minus_icon" />

        <TextView
            android:id="@+id/additionalitem_tv_servicevalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/additionalitem_tv_servicelabel"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="sdfsdfsdf"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/_14sdp" />
    </RelativeLayout>
</LinearLayout>
