<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/add_additional_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/servicetitle"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/add_additional_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_additional_tv_title"
            android:layout_margin="@dimen/_5sdp"
            android:background="@color/gray"
            android:padding="@dimen/_10sdp"
            android:hint="Service"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:id="@+id/layout_additional_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_additional_text1"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_additional_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:hint="Value"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/edit_additional_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:hint="Value"
                android:inputType="number"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_12sdp"
                android:textCursorDrawable="@drawable/insertion"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_additional_text2"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_additional_btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_additional_text2"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@color/red"
                android:text="@string/ok"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/add_additional_btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_additional_btn_ok"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@color/red"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
