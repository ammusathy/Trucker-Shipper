<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".fragment.Help">

    <LinearLayout
        android:id="@+id/help_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/help_txt_sampletitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/title"
            android:textColor="@color/red"
            android:textSize="@dimen/_14sdp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/help_txt_samplecontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginLeft="10dp"
            android:padding="@dimen/_5sdp"
            android:text="@string/content"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <View
            android:id="@+id/help_txt_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/text2"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/help_txt_sampletitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text5"
            android:layout_marginLeft="20dp"
            android:text="@string/title"
            android:textColor="@color/red"
            android:textSize="@dimen/_14sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/help_txt_samplecontent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/help_txt_sampletitle1"
            android:layout_marginLeft="10dp"
            android:padding="@dimen/_5sdp"
            android:text="@string/content"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />


    </LinearLayout>


</RelativeLayout>
