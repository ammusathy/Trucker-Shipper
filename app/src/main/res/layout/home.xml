<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".fragment.Home">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnbooknow"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:id="@+id/layout_pickup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pickUpView"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:background="@drawable/source" />

                        <EditText
                            android:id="@+id/edittextsource"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:hint="@string/source"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_25sdp"
                            android:singleLine="false"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/_14sdp"
                            android:textCursorDrawable="@drawable/insertion"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="@color/lightgray" />

                        <Button
                            android:id="@+id/btnchangeorder"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:background="@drawable/sortby"
                            android:textColorHighlight="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_delarea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btndestination"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:background="@drawable/destination" />

                        <EditText
                            android:id="@+id/edittextdestination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:hint="@string/destination"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_25sdp"
                            android:singleLine="false"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/_14sdp"
                            android:textCursorDrawable="@drawable/insertion"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_5sdp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="@color/lightgray" />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/home_chk_rememberme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:button="@drawable/customdrawablecheckbox"
                        android:drawablePadding="@dimen/_50sdp"
                        android:paddingLeft="@dimen/_16sdp"
                        android:text="@string/bordercrossstatus"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/texttrucktype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/trucktype"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/btntrucktype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/white"
                        android:drawableRight="@drawable/dropdown"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:text="@string/selecttrucktype"
                        android:textAllCaps="false"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_14sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/lightgray" />

                    <TextView
                        android:id="@+id/textpickupdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/pickupdt"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_14sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/btnpickupdate"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1.5"
                            android:background="@color/gray"
                            android:drawableLeft="@drawable/calendar_icon"
                            android:drawablePadding="@dimen/_5sdp"
                            android:enabled="true"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="@string/yyyymmdd"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/btnpickuptime"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="1"
                            android:background="@color/gray"
                            android:drawableLeft="@drawable/alarm_icon"
                            android:drawablePadding="@dimen/_5sdp"
                            android:enabled="false"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="@string/time"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/lightgray" />

                    <TextView
                        android:id="@+id/textdeliverydate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/deliverydt"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_14sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/btndeliverydate"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:layout_weight="1.5"
                            android:background="@color/gray"
                            android:drawableLeft="@drawable/calendar_icon"
                            android:drawablePadding="@dimen/_5sdp"
                            android:enabled="false"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="@string/yyyymmdd"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/btndeliverytime"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="1"
                            android:background="@color/gray"
                            android:drawableLeft="@drawable/alarm_icon"
                            android:drawablePadding="@dimen/_5sdp"
                            android:enabled="false"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="@string/time"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/lightgray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/btnadditionalservices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="@string/additionalservices"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="normal" />


                        <ImageView
                            android:id="@+id/iv_addicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/add_icon" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/add_service_values"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/lightgray" />


                    <TextView
                        android:id="@+id/textnotes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/notes"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_14sdp" />

                    <EditText
                        android:id="@+id/editnotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/gray"
                        android:maxLines="5"
                        android:minHeight="@dimen/_35sdp"
                        android:padding="@dimen/_8sdp"
                        android:singleLine="false"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_14sdp"
                        android:textCursorDrawable="@drawable/insertion"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/red"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/texttotal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18sdp" />

                        <TextView
                            android:id="@+id/textprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18sdp" />
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textincludes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:text="@string/includes"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                        <Button
                            android:id="@+id/btnviewdetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:background="@android:color/transparent"
                            android:text="@string/viewdetails"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            android:visibility="gone" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnbooknow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btnbackground"
        android:text="@string/booknow"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />
</RelativeLayout>
